<%- include('layout/header')%>

<div class="row admin_content position-absolute d-flex">
    <h5 class="text-center">All Orders</h5>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">STT</th>
                <th scope="col">Name Product </th>
                <th scope="col">User Name </th>
                <th scope="col">Total Price</th>
                <th scope="col">Country</th>
                <th scope="col">Payment Method</th>
                <th scope="col">Status</th>
                <th scope="col">Create At </th>
                <th scope="col">Edit </th>
            </tr>
        </thead>
        <tbody>
            <%if(OrderDetails!= ''){ %>
            <% OrderDetails.forEach((row,index)=>{ %>
            <tr>
                <th scope="row"><%=index%></th>
                <td><% row.ListProductName.forEach((list,index)=>{ %>
                    <p><%=list%></p>
                    <%})%>
                </td>
                <td><%= row.NameUser%></td>
                <td><%= row.Total%>$</td>
                <td><%= row.Country%>$</td>
                <td><%= row.PaymentMethod%></td>
                <td><% if(row.Status == 'Pending') { %>
                    <p class="btn btn-danger"><%= row.Status%></p>
                    <%} else { %>
                    <p class="btn btn-success"><%= row.Status%></p>
                    <%}%>
                </td>
                <td><%= row.createdAt%></td>
                <td> <a href="/updateOrders/<%= row._id %>"
                        class="text-success">
                        <i class="fas fa-edit fa-lg mx-1"></i>
                    </a></td>
            </tr>
            <%})%>
            <%}%>
        </tbody>
    </table>
</div>

<%- include('layout/footer')%>